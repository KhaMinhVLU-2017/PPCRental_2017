<body>
    <div class="st-pusher">
        <div class="st-content">
            <div id="main-carousel" class="carousel slide hero-slide col-md-12 meo_slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#main-carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#main-carousel" data-slide-to="1"></li>
                    <li data-target="#main-carousel" data-slide-to="2"></li>
                    <li data-target="#main-carousel" data-slide-to="3"></li>
                    <li data-target="#main-carousel" data-slide-to="4"></li>
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img class="img_slide" src="~/Content/img/slider/slide5.jpg" alt="slide5.jpg">
                        <!--Slide Image-->
                        <div class="container slideblur">
                            <div onmouseout="NotBlur()" onmouseover="blurSlide()" class="carousel-caption div_slide">
                                <h1 class="animated lightSpeedIn black-background">UY TÍN- ĐẢM BẢO- DỄ GIAO DỊCH</h1>
                            </div>
                            <!--.carousel-caption-->
                        </div>
                        <!--.container-->
                    </div>
                    <!--.item-->
                    <div class="item">
                        <img class="img_slide" src="~/Content/img/slider/slide3.jpg" alt="slide3.jpg">
                        <!--Slide Image-->
                        <div class="container slideblur">
                            <div onmouseout="NotBlur()" onmouseover="blurSlide()" class="carousel-caption div_slide">
                                <h1 class="animated bounceIn black-background">Đất vàng đầu tư – An cư trọn đời</h1>
                            </div>
                            <!--.carousel-caption-->
                        </div>
                        <!--.container-->
                    </div>
                    <div class="item">
