@model PPCRental.Models.PROPERTY

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Edit dự án @Model.PropertyName</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    <div class="panel panel-default container-fluid">
        <div class="col-md-6">
            <div class="panel panel-default">

                <div class="panel-heading">Informantion</div>
                <div class=" panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PropertyName, new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.PropertyName)
                        @Html.ValidationMessageFor(model => model.PropertyName)

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Avatar, new { @class = "control-label col-md-2" })

                        <input class="inputcss" type="file" value="@Model.Avatar" />  

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Images, new { @class = "control-label col-md-2" })

                        <input class="inputcss" type="file" value="@Model.Images" />  

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PropertyType_ID, "PropertyType_ID", new { @class = "control-label col-md-2" })

                        @Html.DropDownList("PropertyType_ID", String.Empty)
                        @Html.ValidationMessageFor(model => model.PropertyType_ID)

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Content, new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.Content)
                        @Html.ValidationMessageFor(model => model.Content)

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Street_ID, "Street_ID", new { @class = "control-label col-md-2" })

                        @Html.DropDownList("Street_ID", String.Empty)
                        @Html.ValidationMessageFor(model => model.Street_ID)

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Ward_ID, "Ward_ID", new { @class = "control-label col-md-2" })

                        @Html.DropDownList("Ward_ID", String.Empty)
                        @Html.ValidationMessageFor(model => model.Ward_ID)

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.District_ID, "District_ID", new { @class = "control-label col-md-2" })

                        @Html.DropDownList("District_ID", String.Empty)
                        @Html.ValidationMessageFor(model => model.District_ID)

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.Price)
                        @Html.ValidationMessageFor(model => model.Price)

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.UnitPrice, new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.UnitPrice)
                        @Html.ValidationMessageFor(model => model.UnitPrice)

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Area, new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.Area)
                        @Html.ValidationMessageFor(model => model.Area)

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BedRoom, new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.BedRoom)
                        @Html.ValidationMessageFor(model => model.BedRoom)

                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.BathRoom, new { @class = "control-label col-md-2" })

                        @Html.EditorFor(model => model.BathRoom)
                        @Html.ValidationMessageFor(model => model.BathRoom)

                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading">Feature</div>
                <div class="form-group">
                    <form>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="1">Ban Công
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="2">Chỗ đậu xe
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="3">Thang máy
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="4">Vườn
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="5">Phòng tập Gym
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="6">Nhà bếp
                        </label>
                    </form>
                    <form>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="7">Phòng giặt ủi
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="8">Cho nuôi thú cưng
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="9">Hồ bơi
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="10">Sàn gỗ
                        </label>
                        <label class="checkbox-inline">
                            <input type="checkbox" value="11" />Bảo vệ
                        </label>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
