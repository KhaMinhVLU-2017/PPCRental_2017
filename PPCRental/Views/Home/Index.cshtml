                        <div class="container slideblur">
                            <div onmouseout="NotBlur()" onmouseover="blurSlide()" class="carousel-caption div_slide">
                                <h1 class="animated zoomIn black-background">Chúng tôi sẽ mang lại cho bạn không gian sống hoàn hảo</h1>
                            </div>
                            <!--.carousel-caption-->
                        </div>
                        <!--.container-->
                    </div>
                    <div class="item">
                        <img class="img_slide" src="~/Content/img/slider/slide8.jpg" alt="slide8.jpg">
                        <!--Slide Image-->
                        <div class="container slideblur">
                            <div onmouseout="NotBlur()" onmouseover="blurSlide()" class="carousel-caption div_slide">
                                <h1 class="animated fadeIn black-background">Tôn tạo giá trị  – sống Mộc cùng với thiên nhiên</h1>
                            </div>
                            <!--.carousel-caption-->
                        </div>
                        <!--.container-->
                    </div>
                    <div class="item">
                        <img class="img_slide" src="~/Content/img/slider/slide6.jpg" alt="slide6.jpg">
