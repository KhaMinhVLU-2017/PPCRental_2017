                                            </div>
                                        </div>
                                    }
                                    @if (i + 1 % 3 == 0)
                                    {
                                        break;
                                    }

                                </div>
                            }*@
                        @for (var i = 23; i < 29; i++)
                        {
                            var url = "/chi-tiet/" + Model.FirstOrDefault(s => s.ID == i).PropertyName + "-" + i;
                            <div class="col-sm-4">
                                <div class="service">
                                    <div class="service-thumb-home">
                                        <a href="@url">
                                            <img class="a_project_hot" src="~/Content/img/Home/@Model.FirstOrDefault(s => s.ID == i).Images" alt="">
                                            <hr class="project_hot_left" />
                                            <p class="project_hot_title">HOT PROJECT</p>
                                            <hr class="project_hot_right" />
                                        </a>
                                    </div>
                                    <h3>@Model.FirstOrDefault(s => s.ID == i).PropertyName</h3>
                                    @if (Model.FirstOrDefault(s => s.ID == i).Content.Length > 150)
                                    {
                                        <p>@Model.FirstOrDefault(s => s.ID == i).Content.Substring(1, 150)...</p>
                                    }
                                    else
                                    {
                                        <p>@Model.FirstOrDefault(s => s.ID == i).Content</p>
                                    }
                                    <a class="readmore" href="/Home/Detail/@Model.FirstOrDefault(s=>s.ID==i).ID">Read More &nbsp;<i class="fa fa-angle-right"></i> </a>
                                </div>
                            </div>
                        }
                    </div> <!-- /.row -->
                </div><!-- /.container -->
            </section>
            <section class="testimonial-section section-padding">
                <div class="container text-center">
                    <div class="row">
                        <div class="col-xs-12">
                            <h2 class="section-title">Dự án mới</h2>
                            <span class="section-sub">Những dự án mới nhất được cập nhật liên tục</span>
                        </div>
                    </div> <!-- /.row -->
                    <div class="row content-row">
                        <br />
                        <br />
                        @{int count = 1;
                            foreach (var item in Model)
                            {
                                if (count < 7)
                                {
                                    <div class="col-sm-4">
                                        <div class="service">
                                            <div class="service-thumb-home">
                                                <a href="/Home/Detail/@item.ID">
                                                    <img class="a_project_hot" src="~/Content/img/Home/@item.Images" alt="">
                                                    <hr class="project_hot_left" />
                                                    <p class="project_hot_title">NEW PROJECT</p>
                                                    <hr class="project_hot_right" />
                                                </a>
                                            </div>
                                            <h3>@item.PropertyName</h3>
                                            @if (@item.Content.Length > 150)
                                            {
                                                <p>@item.Content.Substring(1, 150)...</p>
                                            }
                                            else
                                            {
                                                <p>@item.Content</p>
                                            }
                                            <a class="readmore" href="/Home/Detail/@item.ID">Read More &nbsp;<i class="fa fa-angle-right"></i> </a>
                                        </div>
                                    </div><!-- /.col-sm-4 -->
                                }
                                else
                                {
                                    break;
                                }
                                count++;
                            }
                        }
                    </div> <!-- /.row -->
                </div><!-- /.container -->
            </section>
            <!-- services end -->
        </div> <!-- .st-content -->
    </div> <!-- .st-pusher -->
    <!-- Preloader -->
    <div id="preloader">
        <div id="status">
            <div class="status-mes"></div>
        </div>
    </div>
</body>
