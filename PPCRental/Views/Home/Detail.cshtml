@model PPCRental.Models.PROPERTY
@{
ViewBag.Title = "Detail";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" >
	<div class="row">
		<header class="col-md-12">
			<h1>Thông tin chi tiết dự án</h1>
		</header>
        <div class="col-md-8">
            <div class="col-md-10">
                 <p>@Model.PropertyName</p>
            </div>
            <div class="col-md-2">
                <p>@Model.Price @Model.UnitPrice</p>
            </div>
            <div class="col-md-8">
                <p>@Model.STREET.StreetName, @Model.WARD.WardName, @Model.DISTRICT.DistrictName</p>
            </div>
            <div class="col-md-4">
                <p>BedRoom: @Model.BedRoom | BathRoom: @Model.BathRoom </p>
            </div>
            <div class="col-md-12">
                <img class="img-responsive" src="~/Content/img/Home/@Model.Images"/>
            </div>
            <div class="col-md-12">
                <p>@Model.Content</p>
            </div>
        </div>
	</div>
</div>




