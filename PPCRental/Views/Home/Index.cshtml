            </section>
            <section class="testimonial-section section-padding">
                <div class="container text-center">
                    <div class="row">
                        <div class="col-xs-12">
                            <h2 class="section-title">Dự án mới</h2>
                            <span class="section-sub">Những dự án mới nhất được cập nhật liên tục</span>
                        </div>
                    </div> <!-- /.row -->
                    <div class="row content-row">
                        <br />
                        <br />
                        @{int count = 1;
                        foreach (var item in Model)
                        {
                            if (count < 7)
                            {
                                <div class="col-sm-4">
                                    <div class="service">
                                        <div class="service-thumb-home">
