@model IEnumerable<PPCRental.Models.PROPERTY>
@{
    ViewBag.Title = "Home Page";
}
<head>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
        <script>
            $(document).ready(function () {
                $.ajax({
                    url: "/Home/GetDistrict",
                    datatype: "JSON",
                    type: "Get",
                    success: function (data) {
                        debugger;
                        $("#district").prepend("<option> </option>");
                        for (var i = 0; i < data.length; i++) {
                            var opt = new Option(data[i].DistrictName);
                            $("#district").append(opt);
                        }
                    }
                });
            });

            $(function () {
                $("#district").change(function () {
                    $("select[name='Ward'] option").remove()
                    var district = $('#district').val();
                    $.ajax({
                        url: "/Home/GetWard",
                        data: { District: district },
                        datatype: "JSON",
                        type: "Get",
                        success: function (data) {
                            debugger;
                            //$("#ward").prepend("<option> </option>");
                            for (var i = 0; i < data.length; i++) {
                                var opt = new Option(data[i].WardName);
                                $("#ward").append(opt);
                            }
                        }
                    });
                });
            });

            $(function () {
                $("#district").change(function () {
                    $("select[name='Street'] option").remove()
                    var district = $('#district').val();
                    $.ajax({
                        url: "/Home/GetStreet",
                        data: { District: district },
                        datatype: "JSON",
                        type: "Get",
                        success: function (data) {
                            debugger;
                            //$("#ward").prepend("<option> </option>");
                            for (var i = 0; i < data.length; i++) {
                                var opt = new Option(data[i].StreetName);
                                $("#street").append(opt);
                            }
                        }
                    });
                });
            });
        </script>
</head>
<body>
    <div class="st-pusher">
        <div class="st-content">
            <div id="main-carousel" class="carousel slide hero-slide col-md-12 meo_slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#main-carousel" data-slide-to="0" class="active"></li>
