@model IEnumerable<PPCRental.Models.PROPERTY_FEATURE>
@{
    ViewBag.Title = "SearchFeature";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container text-center">
    <div class="row">
        <div class="col-xs-12">
            <h2 class="section-title">Tìm kếm tiện ích</h2>
            @if (Model.Count() > 0)
            {
                <h3>@Model.FirstOrDefault().FEATURE.FeatureName</h3>
            }
            else
            {
                <h3>@ViewBag.Name</h3>
            }
            <span class="section-sub">Những dự án được tìm thấy</span>
        </div>
    </div> <!-- /.row -->
    <br />
    <br />
    <div class="row content-row">
        <br />
        <br />
        @foreach (var item in Model)
        {
            <div class="col-sm-4">
                <div class="service">
                    <div class="service-thumb-home">
                        <a href="#"><img src="~/Content/img/Home/@item.PROPERTY.Images" alt=""></a>
                    </div>

                    <h3>@item.PROPERTY.PropertyName</h3>
                    <p>@item.PROPERTY.Content</p>
                </div>
            </div>
        }
        </div> <!-- /.row -->
    </div><!-- /.container -->


